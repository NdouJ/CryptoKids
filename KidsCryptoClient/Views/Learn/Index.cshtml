@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kids Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Change the button color on click
            $('#color-button').click(function () {
                var colors = ['primary', 'secondary', 'success', 'danger', 'warning', 'info'];
                var randomColor = colors[Math.floor(Math.random() * colors.length)];
                $(this).removeClass().addClass('btn btn-' + randomColor);
            });

            // Add the image to the right div using jQuery
            $('#right-div').append('<img src="https://placekitten.com/200/300" alt="Cute kitten">');
        });
    </script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6" id="left-div">
                <h1>Welcome to our fun page!</h1>
                <p>Press the button to change its color and generate a fun fact.</p>
                <button id="color-button" class="btn btn-primary">NEXT</button>
            </div>
            <div class="col-md-6" id="right-div">
            </div>
        </div>
    </div>

    <script>
        $('#color-button').click(function () {
            $.ajax({
                url: '/Home/GenerateFact',
                type: 'POST',
                dataType: 'json',
                success: function (data) {
                    alert('Fun fact: ' + data);
                },
                error: function () {
                    alert('Error generating fun fact!');
                }
            });
        });
    </script>

</body>
</html>

