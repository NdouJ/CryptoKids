<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KidsCryptoClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cutsom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KidsCryptoClient.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #ffbf00;">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/Assets/logo.PNG" alt="KidsCryptoLogo" width="100" height="100" class="d-inline-block align-text-top rounded-circle">
                    
                </a>
                <span class="fs-2 fw-bold text-center">KidsCrypto</span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link fs-4 fw-bold" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-4 fw-bold" href="#">Learn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-4 fw-bold" href="#">Quizz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-4 fw-bold" href="#">Rate Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; 2023 - KidsCryptoClient - Designed by Jelena Ndou</span>
            <span class="dollar-sign"></span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
